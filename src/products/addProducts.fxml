<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="products.productsController">
   <children>
      <Pane prefHeight="371.0" prefWidth="272.0">
         <children>
            <Label layoutX="76.0" layoutY="24.0" prefHeight="41.0" prefWidth="120.0" text="Add Product">
               <font>
                  <Font name="Arial Unicode MS" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="productNameField" layoutX="62.0" layoutY="173.0" />
            <TextField fx:id="priceField" layoutX="62.0" layoutY="217.0" prefHeight="25.0" prefWidth="63.0" />
            <TextField fx:id="quantityField" layoutX="148.0" layoutY="217.0" prefHeight="25.0" prefWidth="63.0" />
            <TextArea fx:id="descriptionArea" layoutX="66.0" layoutY="258.0" prefHeight="67.0" prefWidth="142.0" />
            <Button fx:id="saveButton" layoutX="110.0" layoutY="332.0" mnemonicParsing="false" onMouseClicked="#saveProductToDatabase" text="Save" />
